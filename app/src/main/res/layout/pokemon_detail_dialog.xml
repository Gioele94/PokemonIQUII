<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:localizer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.pokemon.iquii.R" />

        <variable
            name="viewModel"
            type="com.pokemon.iquii.activities.pokemonDetails.viewmodel.PokemonDetailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.tabs.PokemonIquiiTabs">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="9dp"
            app:contentPaddingBottom="@dimen/padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".7">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_xhuge">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold"
                        localizer:text="@string/pokemonDetails.name" />

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:padding="@dimen/padding"
                        android:text="@{viewModel.namePokemon}"
                        android:textAlignment="viewEnd" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_normal"
                        android:padding="@dimen/padding"
                        android:textStyle="bold"
                        localizer:text="@string/pokemonDetails.weight" />

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:text="@{viewModel.weightPokemon}"
                        android:textAlignment="viewEnd"
                        tools:text="@string/pokemonDetails.name" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold"
                        localizer:text="@string/pokemonDetails.height" />

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:text="@{viewModel.heightPokemon}"
                        android:textAlignment="viewEnd"
                        tools:text="@string/pokemonDetails.name" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold"
                        localizer:text="@string/pokemonDetails.type" />

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:text="@{viewModel.typePokemon}"
                        android:textAlignment="viewEnd" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"
                    localizer:text="@string/pokemonDetails.stats" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:paddingEnd="@dimen/padding">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textAlignment="viewEnd"
                        localizer:text="@string/pokemonDetails.hp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="@{viewModel.hpValue}" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:paddingEnd="@dimen/padding">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textAlignment="viewEnd"
                        localizer:text="@string/pokemonDetails.attack" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="@{viewModel.attackValue}" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:paddingEnd="@dimen/padding">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textAlignment="viewEnd"
                        localizer:text="@string/pokemonDetails.defense" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="@{viewModel.defenseValue}" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:paddingEnd="@dimen/padding">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textAlignment="viewEnd"
                        localizer:text="@string/pokemonDetails.specialAttack" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="@{viewModel.specialAttackValue}" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:paddingEnd="@dimen/padding">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textAlignment="viewEnd"
                        localizer:text="@string/pokemonDetails.specialDefense" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="@{viewModel.specialDefenseValue}" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:paddingEnd="@dimen/padding">

                    <com.pokemon.iquii.components.textview.PokemonIquiiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textAlignment="viewEnd"
                        localizer:text="@string/pokemonDetails.speed" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="@{viewModel.speedValue}" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/bottomCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomCard">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:imageUrl="@{viewModel.imageUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                fresco:fadeDuration="10"
                fresco:failureImage="@drawable/ic_pokemon_logo"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/ic_pokemon_logo"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:progressBarAutoRotateInterval="1000"
                fresco:progressBarImage="@drawable/progress_bar_custom"
                fresco:progressBarImageScaleType="centerInside"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@color/primaryLight"
                fresco:roundingBorderWidth="2dp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>